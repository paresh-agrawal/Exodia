            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/schedule"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#333"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="18dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp"
                            android:src="@drawable/ic_query_builder_black_15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/laserTag_round1_schedule_tv"
                            android:textColor="#222"
                            android:hint="Loading.."
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prize"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize worth"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#333"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹12,000 to be won"
                        android:textSize="16dp"
                        android:textColor="#333"
                        android:paddingLeft="18dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Desctiption"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#333"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music suffices where languages fail.\nExodia bring to you Instrumania,\ndbbdf\nfgg\ngdgdfg\ndfgdgd\ndffgdfg\ndgdgdfgfgdfg"
                        android:textSize="16dp"
                        android:textColor="#333"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="18dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contacts"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#333"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Akash Agrawal - "
                            android:textSize="16dp"
                            android:textColor="#333"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/call_laserTag_akashA"
                            android:text="@string/laserTag_akashA"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Akash Sharma - "
                            android:textSize="16dp"
                            android:textColor="#333"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/call_laserTag_akashS"
                            android:text="@string/laserTag_akashS"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:layout_marginBottom="35dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

